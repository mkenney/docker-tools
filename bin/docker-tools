#!/usr/bin/env bash

declare __term__
if [ -t 0 ]; then
    __term__="-t"
fi

declare __volumes__="-v /Users/mkenney/my_projects/docker-tools/.docker-tools:/usr/local/docker-tools:rw"
declare __image__="mkenney/docker-tools"
declare __tag__="latest"
declare __env__="-e TERM=xterm"

docker run --rm ${__term__} -i ${__env__} ${__volumes__} ${__entrypoint__} ${__image__}:${__tag__} ${__command__} $@

